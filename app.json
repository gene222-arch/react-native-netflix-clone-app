{
  "expo": {
    "name": "netflix-clone-app",
    "slug": "netflix-clone-app",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./app/assets/netflix-icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./app/assets/app-splash-screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "plugins": [
      [
        "expo-notifications", 
        {
          "icon": "./app/assets/logotop.png",
          "color": "#121212",
          "sounds": ["./app/assets/iphone.wav"],
          "mode": "production"
        }
    ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "userInterfaceStyle": "dark",
      "supportsTablet": true,
      "requireFullScreen": true
    },
    "android": {
      "userInterfaceStyle": "dark",
      "useNextNotificationsApi": true,
      "permissions": ["RECEIVE_BOOT_COMPLETED"],
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/netflix-icon.png",
        "backgroundColor": "#000000"
      }
    },
    "web": {
      "favicon": "./app/assets/favicon.png"
    },
    "description": ""
  }
}
